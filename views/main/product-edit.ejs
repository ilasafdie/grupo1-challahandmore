<!DOCTYPE html>
<html lang="en">

  <%- include("../partials/head")%>
  <title>Edit</title>

<body>
  <%- include("../partials/header")%>

<main>

  <h1 class="titleProdList">Editar Producto</h1>
  
          <article>
              <div class="productos">
                  <% let rutaProd="/detalle/" + product.id%>
                      <a href=<%=rutaProd %>>
                          <img width="150" height="150" src=<%=product.photo %> alt=<%= product.photo_name
                              %> >
                      </a>
                      <div class="prodListName">
                          <br>
                          <%= product.product_name %>
                              <br>
                              $<%= product.price %>
                      </div>
                      <div class="cant">
                          <label class="screen-reader-text" for="quantity"></label>
                          <input type="number" id="quantity" class="input" step="1" min="0" max
                              name="cart" value="1" title="Cantidad" size="4" placeholder
                              inputmode="numeric" autocomplete="off">
                          <div class="envio">
                              <button type="submit" class="menu-abajo"><a href="/">Agregar al
                                      Carrito</a></button>
                          </div>     
                          <br>
                      </div>
              </div>
          </article>
</main>

</main>

    <%- include("../partials/footer")%> 

</body>
</html>