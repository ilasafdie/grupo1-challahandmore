<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head")%>
<% if (mensaje != '') { %> 
    <h3 class="welcome"><%= mensaje %> </h3>
<% } %> 
    <title>ProductList</title>

    <body>
        <%- include("../partials/header")%>
            <main>
                <!-- FALTARIA AGREGAR ACA EL MENSAJE DE CONFIRMACION DE CREACION O EDICION DE PRODUCTOS -->
                   
                <div class="envio padding">
                    <% let rutaProdCreate="/productCreate/" %>
                        <button type="submit" class="menu-abajo textSize"><a href=<%=rutaProdCreate %>>Crear
                                Producto</a></button>
                </div>
                <% if (typeList=="all" ) {%>
                    <h1 class="titleProdList">Listado de productos</h1>
                    <% } else { %>
                        <h1 class="titleProdList">Listado de <%= typeList %>
                        </h1>
                        <% } %>

                            <section class="prodListSection padding">
                                <% products.forEach (product=> { %>
                                    <article>
                                        <div class="productos">
                                            <% let rutaProd="/productDetail/" + product.id%>
                                                <a href=<%=rutaProd %>>
                                                    <img width="150" height="150" src=<%=product.photo %> alt=<%=
                                                        product.photo_name %> >
                                                </a>
                                                <div class="prodListName">
                                                    <br>
                                                    <div class="bold">
                                                        <%= product.product_name %>
                                                    </div>
                                                    <br>
                                                    $<%= product.price %>
                                                </div>
                                                <div class="cant">
                                                    <label class="screen-reader-text" for="quantity"></label>
                                                    <input type="number" id="quantity" class="input" step="1" min="0"
                                                        max name="cart" value="1" title="Cantidad" size="4" placeholder
                                                        inputmode="numeric" autocomplete="off">
                                                    <div class="envio">
                                                        <button type="submit" class="menu-abajo"><a href="/">Agregar al
                                                                Carrito</a></button>
                                                    </div>
                                                    <div class="envio">
                                                        <% let rutaProdEdit="/productEdit/" + product.id%>
                                                            <button type="submit" class="menu-abajo"><a
                                                                    href=<%=rutaProdEdit %>>Editar Producto</a></button>
                                                    </div>

                                                    <form action="/productDelete/<%= product.id  %> " method="POST"
                                                        enctype="multipart/form-data">

                                                        <div class="envio">
                                                            <button type="submit" class="menu-abajo"><a>Eliminar
                                                                    Producto</a></button>
                                                        </div>
                                                    </form>

                                                </div>
                                        </div>
                                    </article>
                                    <% }) %>
                            </section>
            </main>
            <%- include("../partials/footer")%>
    </body>

</html>